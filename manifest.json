{
  "manifest_version": 3,
  "name": "YouTube Ad Blocker Pro",
  "version": "2.0", 
  "description": "Bloqueador de anúncios avançado para YouTube",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "scripting",
    "tabs",
    "*://*.youtube.com/*",
    "*://*.googlevideo.com/*",
    "*://*.doubleclick.net/*"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.googlevideo.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_title": "YouTube Ad Blocker Pro"
  }
}